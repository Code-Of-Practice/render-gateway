{
  "name": "render-gateway",
  "version": "0.0.1",
  "description": "The core implementation for a render server",
  "main": "dist/index.js",
  "repository": "git@github.com:Khan/render-gateway.git",
  "author": "Jeff Yates <jeff@khanacademy.org>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "test": "echo 'TODO'",
    "lint": "eslint --report-unused-disable-directives --config .eslintrc.js \"{src,bin,__{tests,mocks}__}/**/*.js\"",
    "flow:ci": "flow check",
    "build:noclean": "babel src --out-dir dist --source-maps --config-file ./.babelrc.js",
    "build": "yarn clean && yarn build:noclean",
    "pretty": "pretty-quick",
    "postinstall": "test -n \"$NOYARNPOSTINSTALL\" || yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-flow": "^7.8.3",
    "@khanacademy/eslint-config": "^0.0.5",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-disable": "^1.0.5",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "flow-bin": "^0.118.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "yarn test --findRelatedTests",
      "yarn pretty"
    ]
  }
}
